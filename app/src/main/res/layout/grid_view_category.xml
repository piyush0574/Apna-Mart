<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_grid_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/slider_background"
    android:elevation="3dp">
    <Button
        android:id="@+id/category_grid_view_viewall_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/slider_background"
        android:backgroundTint="@color/btnRed"
        android:text="View All"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/category_grid_product_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="SHOP BY CATEGORY"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/category_grid_view_viewall_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/category_grid_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_grid_view_viewall_btn">

        <include
            layout="@layout/category_item"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <include
            layout="@layout/category_item"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <include
            layout="@layout/category_item"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <include
            layout="@layout/category_item"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <include
            layout="@layout/category_item"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <include
            layout="@layout/category_item"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <include
            layout="@layout/category_item"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <include
            layout="@layout/category_item"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>